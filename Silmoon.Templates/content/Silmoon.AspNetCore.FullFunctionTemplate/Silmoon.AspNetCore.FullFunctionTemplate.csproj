<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <Nullable>annotations</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <!--<AspNetCoreHostingModel>OutOfProcess</AspNetCoreHostingModel>-->
  </PropertyGroup>

  <PropertyGroup>
    <SatelliteResourceLanguages>en</SatelliteResourceLanguages>
    <SatelliteResourceLanguages>zh-Hans</SatelliteResourceLanguages>
    <GenerateDocumentationFile>True</GenerateDocumentationFile>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <NoWarn>1701;1702;CS1591</NoWarn>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <NoWarn>1701;1702;CS1591</NoWarn>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="Services\SilmoonDevAppServiceImpl.cs" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Mvc.NewtonsoftJson" Version="9.0.9" />
    <PackageReference Include="Microsoft.VisualStudio.Web.CodeGeneration.Design" Version="9.0.0" />
    <PackageReference Include="MongoDB.Driver" Version="3.5.0" />
    <PackageReference Include="Newtonsoft.Json" Version="13.0.4" />
    <PackageReference Include="Silmoon" Version="2.0.0" />
    <PackageReference Include="Silmoon.AspNetCore" Version="2.0.0" />
    <PackageReference Include="Silmoon.AspNetCore.Extension" Version="2.0.0" />
    <PackageReference Include="Silmoon.AspNetCore.Blazor" Version="2.0.0" />
    <PackageReference Include="Silmoon.Data.MongoDB" Version="2.0.0" />
    <PackageReference Include="Silmoon.Extension" Version="2.0.0" />
    <PackageReference Include="Silmoon.Graphics" Version="0.0.2" />
    <PackageReference Include="Silmoon.Net" Version="2.0.0" />
  </ItemGroup>

  <ItemGroup>
    <Content Update="config.local*.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      <CopyToPublishDirectory>Never</CopyToPublishDirectory>
    </Content>
    <None Update="config.local*.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      <CopyToPublishDirectory>Never</CopyToPublishDirectory>
    </None>
  </ItemGroup>

  <ItemGroup>
    <Content Update="config.debug.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Update="config.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <None Update="config.debug.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    <None Update="config.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>

  <ItemGroup>
    <Folder Include="DataProtection\" />
  </ItemGroup>

  <!--<ItemGroup>
    <Content Include="config.json" />
    <Content Include="config.local.json">
      <DependentUpon>config.json</DependentUpon>
    </Content>
    <Content Include="config.debug.json">
      <DependentUpon>config.json</DependentUpon>
    </Content>
    <Content Include="config.local.debug.json">
      <DependentUpon>config.local.json</DependentUpon>
    </Content>
  </ItemGroup>-->

</Project>
